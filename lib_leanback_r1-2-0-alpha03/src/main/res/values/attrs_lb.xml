<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="lbBaseGridView">
        <attr name="focusOutFront" format="boolean" />
        <attr name="focusOutEnd" format="boolean" />
        <attr name="focusOutSideStart" format="boolean" />
        <attr name="focusOutSideEnd" format="boolean" />
        <attr name="horizontalMargin" format="dimension" />
        <attr name="verticalMargin" format="dimension" />
        <attr name="android:horizontalSpacing" />
        <attr name="android:verticalSpacing" />
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="lbHorizontalGridView">

        <attr name="rowHeight" format="dimension">
            <enum name="wrap_content" value="-2" />
        </attr>

        <attr name="numberOfRows" format="integer" />
    </declare-styleable>
    <declare-styleable name="lbVerticalGridView">
        <attr name="columnWidth" format="dimension">
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="numberOfColumns" format="integer" />
    </declare-styleable>
    <declare-styleable name="RoundLayout">
        <attr name="rl_clip_path" format="reference|boolean" />
        <attr name="rl_rate_width" format="reference|float" />
        <attr name="rl_rate_height" format="reference|float" />
        <attr name="rl_clip_background" format="reference|boolean" />
        <attr name="rl_clip_circle" format="reference|boolean" />
        <attr name="rl_scale" format="reference|float" />
        <attr name="rl_duration" format="reference|integer" />
        <attr name="rl_corner_top_left" format="reference|dimension" />
        <attr name="rl_corner_top_right" format="reference|dimension" />
        <attr name="rl_corner_bottom_left" format="reference|dimension" />
        <attr name="rl_corner_bottom_right" format="reference|dimension" />
        <attr name="rl_child_text_id" format="reference" />
        <attr name="rl_child_text_color_normal" format="reference|color" />
        <attr name="rl_child_text_color_focus" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="RoundImageView">
        <attr name="riv_corner" format="reference|dimension" />
        <attr name="riv_focus" format="reference|boolean" />
        <attr name="riv_scale" format="reference|float" />
        <attr name="riv_duration" format="reference|integer" />
    </declare-styleable>
    <declare-styleable name="FocusLayout">
        <attr name="fl_scale" format="reference|float" />
        <attr name="fl_duration" format="reference|integer" />
        <attr name="fl_bg_resource_normal" format="reference" />
        <attr name="fl_bg_resource_focus" format="reference" />
        <attr name="fl_bg_color_normal" format="reference|color" />
        <attr name="fl_bg_color_focus" format="reference|color" />
        <attr name="fl_text_color_normal" format="reference|color" />
        <attr name="fl_text_color_focus" format="reference|color" />
        <attr name="fl_width" format="reference|float" />
        <attr name="fl_height" format="reference|float" />
    </declare-styleable>
    <declare-styleable name="TextViewPlus">
        <attr name="tvp_drawable_left_width" format="dimension|reference" />
        <attr name="tvp_drawable_left_height" format="dimension|reference" />
        <attr name="tvp_drawable_top_width" format="dimension|reference" />
        <attr name="tvp_drawable_top_height" format="dimension|reference" />
        <attr name="tvp_drawable_right_width" format="dimension|reference" />
        <attr name="tvp_drawable_right_height" format="dimension|reference" />
        <attr name="tvp_drawable_bottom_width" format="dimension|reference" />
        <attr name="tvp_drawable_bottom_height" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="ClassLayout">
        <attr name="cl_orientation">
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
        </attr>
        <attr name="cl_item_margin" format="reference|dimension" />
        <attr name="cl_item_height" format="reference|dimension" />
        <attr name="cl_item_width" format="reference|dimension" />
        <attr name="cl_item_text_size" format="reference|dimension" />
        <attr name="cl_item_text_color" format="reference|color" />
        <attr name="cl_item_text_color_checked" format="reference|color" />
        <attr name="cl_item_text_color_focus" format="reference|color" />
        <attr name="cl_item_background_resource" format="reference" />
        <attr name="cl_item_background_resource_checked" format="reference" />
        <attr name="cl_item_background_resource_focus" format="reference" />
    </declare-styleable>
</resources>